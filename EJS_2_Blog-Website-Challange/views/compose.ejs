<%- include("partials/header") %>

<h1><%= header %> </h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="titleOfContent">Title</label>
        <input id="titleOfContent" type="text" name="title" class="form-control" autofocus required>
    </div>
    <div class="form-group">
        <label for="postOfContent">Post</label>
        <textarea id="postOfContent" type="text" name="content" class="form-control" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") %>